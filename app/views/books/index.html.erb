<h1>All Books</h1>

<%# link_to 'Back to Home', root_path %>

<% if !@books.nil? %>
  <div class="books-list">
    <% @books.each do |book| %>
      <div class="book-item">
        <p><h2><%= link_to book.title, book_path(book) %></h2>by <%= link_to book.author.name, author_path(book.author) %></p>
        <p><strong>Genre:</strong> <%= book.genre %></p>
        <p><%= truncate(book.description, length: 50) %></p>
        <p><small><%= pluralize(book.reviews.count, 'review') %></small></p>
      </div>
      <hr>
    <% end %>
  </div>
<% else %>
  <p>No books available yet.</p>
<% end %>