<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Mini Goodreads" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Mini Goodreads">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
   
  </head>

  <body class="bg-light">

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container">
      <%= link_to "Mini Goodreads", root_path, class: "navbar-brand fw-bold" %>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarContent">

        <!-- Left Links -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to "Books", books_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Authors", authors_path, class: "nav-link" %>
          </li>
        </ul>

        <!-- Right User Section -->
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <span class="navbar-text me-3 text-white">
                Hello, <%= current_user.name %>
              </span>
            </li>

            <li class="nav-item">
              <%= link_to "My Profile", user_path(current_user), class: "btn btn-outline-light btn-sm me-2" %>
            </li>

            <li class="nav-item">
              <%= button_to "Sign Out", destroy_user_session_path,
                    method: :delete,
                    class: "btn btn-danger btn-sm",
                    form_class: "d-inline" %>
            </li>

          <% else %>
            <li class="nav-item me-2">
              <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-light btn-sm" %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success btn-sm" %>
            </li>
          <% end %>
        </ul>

      </div>
    </div>
  </nav>


  <!-- FLASH MESSAGES -->
  <div class="container mt-3">
    <% flash.each do |type, message| %>
      <div class="alert <%= type == "notice" ? "alert-success" : "alert-danger" %> alert-dismissible fade show" role="alert">
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% end %>
  </div>


  <!--MAIN CONTENT -->
  <main class="container py-4">
    <div class="card shadow-sm p-4">
      <%= yield %>
    </div>
  </main>


  <!-- FOOTER -->
  <footer class="bg-dark text-white text-center py-3 mt-auto">
    <div class="container">
      <small>Mini Goodreads Â© <%= Time.current.year %></small>
    </div>
  </footer>


  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>