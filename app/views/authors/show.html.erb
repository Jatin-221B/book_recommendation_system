<div class="container py-5">

  <% if @author.present? %>

    <!-- Author Header -->
    <div class="bg-dark text-white p-5 rounded shadow-sm mb-5">
      <div class="d-flex justify-content-between align-items-center flex-wrap">
        <div>
          <h1 class="fw-bold mb-2"><%= @author.name %></h1>
          <p class="mb-0 text-light">
            <%= pluralize(@books.total_count, "book") if @books.respond_to?(:total_count) %>
          </p>
        </div>

        <%= link_to "Back to Authors",
                    authors_path,
                    class: "btn btn-outline-light mt-3 mt-md-0" %>
      </div>
    </div>



    <!-- About Section -->
    <div class="card shadow-sm border-0 mb-5">
      <div class="card-body">
        <h4 class="fw-bold mb-3">About the Author</h4>
        <p class="text-muted mb-0">
          <%= @author.bio %>
        </p>
      </div>
    </div>



    <!-- Books Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold mb-0">Books by <%= @author.name %></h3>
    </div>

    <% if @books.any? %>
      <div class="row g-4">
        <% @books.each do |book| %>
          <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm border-0">
              <div class="card-body d-flex flex-column">

                <h5 class="card-title fw-bold">
                  <%= link_to book.title,
                              book_path(book),
                              class: "text-decoration-none text-dark" %>
                </h5>

                <p class="card-text text-muted small">
                  <%= truncate(book.description, length: 120) %>
                </p>

                <div class="mt-auto">
                  <%= link_to "View Details",
                              book_path(book),
                              class: "btn btn-outline-primary btn-sm w-100" %>
                </div>

              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-5 d-flex justify-content-center">
        <%= paginate @books %>
      </div>

    <% else %>
      <div class="alert alert-info">
        This author has no books listed yet.
      </div>
    <% end %>

  <% else %>

    <!-- Error State -->
    <div class="alert alert-danger text-center">
      Author not found.
    </div>

  <% end %>

</div>