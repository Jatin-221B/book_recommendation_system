<!-- HERO SECTION -->
<section class="bg-dark text-white text-center py-5 mb-5 rounded shadow-sm">
  <div class="container">
    <h1 class="display-4 fw-bold">Welcome to Mini Goodreads</h1>
    <p class="lead mt-3">
      Discover books, read reviews, and share your thoughts
    </p>

    
  </div>
</section>



<!-- RECENT BOOKS SECTION -->
<section class="mb-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Recently Added Books</h2>
    <%= link_to "View All", books_path, class: "btn btn-sm btn-outline-primary" %>
  </div>

  <% if @recent_books.any? %>
    <div class="row g-4">
      <% @recent_books.each do |book| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">

              <h5 class="card-title fw-bold">
                <%= link_to book.title, book_path(book), class: "text-decoration-none text-dark" %>
              </h5>

              <p class="mb-2 text-muted">
                by <%= link_to book.author.name, author_path(book.author), class: "text-decoration-none" %>
              </p>

              <span class="badge bg-secondary mb-3">
                <%= book.genre %>
              </span>

              <div class="mt-auto">
                <%= link_to "View Details", book_path(book), class: "btn btn-outline-primary btn-sm w-100" %>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      No books yet. Check back soon!
    </div>
  <% end %>
</section>



<!-- EXPLORE SECTION -->
<section class="bg-light p-4 rounded shadow-sm">
  <h2 class="fw-bold mb-3">Explore</h2>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Browse All Books</h5>
          <p class="card-text text-muted">
            Discover our full collection of books across genres.
          </p>
          <%= link_to "Browse Books", books_path, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">Browse Authors</h5>
          <p class="card-text text-muted">
            Explore authors and learn more about their works.
          </p>
          <%= link_to "Browse Authors", authors_path, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</section>